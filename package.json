{
  "name": "ts-eslint-starter",
  "version": "1.0.0",
  "description": "A simple starter kit for TypeScript and ESLint.",
  "scripts": {
    "build": "npm run lint --silent && npm run typecheck --silent && tsup",
    "dev": "tsup --watch --onSuccess \"node dist/index.js\"",
    "lint": "eslint ./src",
    "lint:fix": "npm run lint --silent -- --fix",
    "typecheck": "tsc --noEmit",
    "start": "node dist/index.js"
  },
  "author": "HiveSolution",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=20.9.0"
  },
  "overrides": {
    "minimatch": "^10.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^20.17.14",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0"
  }
}
