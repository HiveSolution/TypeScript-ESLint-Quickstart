{
  "name": "ts-eslint-starter",
  "version": "1.0.0",
  "description": "A simple starter kit for TypeScript and ESLint.",
  "scripts": {
    "build": "npm run lint --silent && tsc",
    "dev": "ts-node-dev --respawn --pretty --transpile-only src/index.ts",
    "lint": "eslint ./src",
    "lint:fix": "npm run lint --silent -- --fix",
    "start": "node dist/index.js"
  },
  "author": "HiveSolution",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=20.9.0"
  },
  "devDependencies": {
    "@types/node": "^20.17.14",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  }
}
